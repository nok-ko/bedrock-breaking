{
  "schemaVersion": 1,

  "id": "bedrock_breaking",

  "version": "${version}",

  "name": "Bedrock Breaking",
  "description": "Allows Bedrock to be broken, with or without a custom pickaxe item. Don't fall!",
  "authors": [
    "nokko"
  ],

  "contact": {
    "homepage": "https://nokko.me/",
    "sources": ""
  },

  "license": "CC0-1.0",
  "icon": "assets/bedrockbreaking/icon.png",

  "environment": "*",

  "entrypoints": {
    "main": [
      "me.nokko.bedrockbreaking.BedrockBreaking::init"
    ]
  },

  "mixins": [
    "bedrock_breaking.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.16.x"
  },

  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "paradoxconfig": {
      "package": "me.nokko.bedrockbreaking.config",
      "configs": ["BedrockBreakingConfig"]
    }
  }
}
